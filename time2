// Create the countdown timer element
             const countdownTimer = document.createElement('div');
            countdownTimer.textContent = '';
            countdownTimer.style.position = 'absolute';
            countdownTimer.style.top = '32px';
            countdownTimer.style.right = '32px';
            countdownTimer.style.color = 'white';
            countdownTimer.style.fontFamily = 'Arial';
            countdownTimer.style.fontSize = '24px';
            canvas.parentNode.appendChild(countdownTimer);

            // Get the bounding rectangle of the canvas
            const canvasRect = canvas.getBoundingClientRect();

            // Adjust the position of the countdown timer
            countdownTimer.style.top = `${canvasRect.top + 30}px`;
            countdownTimer.style.right = `${canvasRect.right - 470}px`;

            // ...

            // Inside the game loop
            function gameLoop() {
                // ...

                // Update the position of the countdown timer
                countdownTimer.style.top = `${canvasRect.top + 32}px`;
                countdownTimer.style.right = `${canvasRect.right - 32}px`;

                // ...

                // Update and render the countdown timer
                countdownTimer.textContent = formatTime(remainingTime);


            }

            // Format the remaining time as MM:SS
            function formatTime(time) {
                const minutes = Math.floor(time / 60);
                const seconds = time % 60;
                return `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            }


            // Start the countdown timer
            let countdownTime = 1 * 60; // 5 minutes in seconds
            let remainingTime = countdownTime;

            function startCountdown() {
                if (remainingTime > 0) {
                    remainingTime--;
                    countdownTimer.textContent = formatTime(remainingTime);
                    setTimeout(startCountdown, 1000); // Start the next countdown after 1 second
                    console.log("time start")

                } else {
                   // isPaused = true;
                  //  startPauseButton.textContent = 'Paused';
                  //  cancelAnimationFrame(animationFrameId);
                  //  backgroundMusic.pause(); // Stop the background music
                  //  return;
                  console.log(backgroundMusic);
                  clearTimeout(backgroundMusic);

                }
            }

            // Start the countdown
            startCountdown();
           